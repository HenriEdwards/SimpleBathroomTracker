<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widget_preview_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/widget_preview_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:src="@drawable/widget_preview_bg" />

  <LinearLayout
    android:id="@+id/widget_preview_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
      android:id="@+id/widget_preview_cards_row"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <FrameLayout
        android:id="@+id/widget_preview_pee"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="6dp"
        android:layout_weight="1">

        <ImageView
          android:id="@+id/widget_preview_pee_card_bg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/widget_preview_card_bg" />

        <ImageView
          android:id="@+id/widget_preview_pee_card_border"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:alpha="0.35"
          android:scaleType="fitXY"
          android:src="@drawable/widget_preview_card_border" />

        <FrameLayout
          android:id="@+id/widget_preview_pee_content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:paddingTop="4dp"
          android:paddingBottom="4dp">

          <LinearLayout
            android:id="@+id/widget_preview_pee_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/widget_preview_pee_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
            android:text="&#x1F4A7;"
              android:textColor="#4E7F6C"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/widget_preview_pee_count"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:layout_weight="1"
              android:gravity="center"
              android:includeFontPadding="false"
              android:minEms="2"
              android:text="3"
              android:textColor="#4E7F6C"
              android:textSize="14sp"
              android:textStyle="bold" />

              <FrameLayout
                android:id="@+id/widget_preview_pee_add_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp">

              <ImageView
                android:id="@+id/widget_preview_pee_plus_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/widget_preview_plus_bg" />

              <TextView
                android:id="@+id/widget_preview_pee_plus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
            </FrameLayout>
          </LinearLayout>

          <TextView
            android:id="@+id/widget_preview_pee_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Last: --:--"
            android:textColor="#B2AAA3"
            android:textSize="9sp" />
        </FrameLayout>
      </FrameLayout>

      <FrameLayout
        android:id="@+id/widget_preview_poop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_weight="1">

        <ImageView
          android:id="@+id/widget_preview_poop_card_bg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/widget_preview_card_bg" />

        <ImageView
          android:id="@+id/widget_preview_poop_card_border"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:alpha="0.35"
          android:scaleType="fitXY"
          android:src="@drawable/widget_preview_card_border" />

        <FrameLayout
          android:id="@+id/widget_preview_poop_content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:paddingTop="4dp"
          android:paddingBottom="4dp">

          <LinearLayout
            android:id="@+id/widget_preview_poop_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/widget_preview_poop_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="&#x1F4A9;"
              android:textColor="#4E7F6C"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/widget_preview_poop_count"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:layout_weight="1"
              android:gravity="center"
              android:includeFontPadding="false"
              android:minEms="2"
              android:text="1"
              android:textColor="#4E7F6C"
              android:textSize="14sp"
              android:textStyle="bold" />

              <FrameLayout
                android:id="@+id/widget_preview_poop_add_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp">

              <ImageView
                android:id="@+id/widget_preview_poop_plus_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/widget_preview_plus_bg" />

              <TextView
                android:id="@+id/widget_preview_poop_plus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
            </FrameLayout>
          </LinearLayout>

          <TextView
            android:id="@+id/widget_preview_poop_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Last: --:--"
            android:textColor="#B2AAA3"
            android:textSize="9sp" />
        </FrameLayout>
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/widget_preview_home_button"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginStart="8dp"
      android:gravity="center"
      android:orientation="horizontal">

      <FrameLayout
        android:layout_width="20dp"
        android:layout_height="20dp">

        <ImageView
          android:id="@+id/widget_preview_home_icon_bg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/widget_preview_home_bg" />

        <ImageView
          android:id="@+id/widget_preview_home_icon"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_gravity="center"
          android:src="@drawable/ic_widget_home"
          android:tint="#FFFFFF" />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
